{
  "env": { "browser": true, "es2021": true },
  "parserOptions": {
    "ecmaVersion": "latest",
    "ecmaFeatures": { "jsx": true },
    "sourceType": "script"
  },
  "plugins": ["react"],
  "globals": {
    "React": "readonly",
    "ReactDOM": "readonly",
    "trackEvent": "readonly",
    "gtag": "readonly"
  },
  "rules": {
    "no-eval": "error",
    "no-implied-eval": "error",
    "no-new-func": "error",
    "no-script-url": "error",
    "no-unused-vars": ["warn", { "argsIgnorePattern": "^_" }],
    "no-undef": "error",
    "react/jsx-uses-react": "error",
    "react/jsx-uses-vars": "error"
  }
}
